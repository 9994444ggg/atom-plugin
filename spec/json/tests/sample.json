{
  "description": "opening a whitelisted file should send a focus event",
  "setup": {
    "whitelist": [
      "data/whitelisted"
    ],
    "kited": "authenticated"
  },
  "runs": [
    {
      "type": "action",
      "action": "open",
      "properties": {
        "file": "data/whitelisted/file.py"
      }
    },
    {
      "type": "expect",
      "expect": "request",
      "properties": {
        "path": "/clientapi/editor/event",
        "method": "POST",
        "body": "data/http/event/file_request_focus.json"
      }
    },
    {
      "type": "action",
      "action": "move-cursor",
      "properties": {
        "offset": 11
      }
    },
    {
      "type": "expect",
      "expect": "request",
      "properties": {
        "path": "/clientapi/editor/event",
        "method": "POST",
        "body": "data/http/event/file_request_selection.json"
      }
    }
  ]
}
